<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="eu.kudan.ar.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/my_dark_grey"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView4" />

        <ImageButton
            android:id="@+id/markerUploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload_marker_default"
            android:background="@null"
            android:onClick="onMarkerUploadClick"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/textView4"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pick image for art"
            android:id="@+id/textView3"
            android:textSize="40dp"
            android:textStyle="italic"
            android:gravity="left"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignLeft="@+id/imageUploadButton"
            android:layout_alignStart="@+id/imageUploadButton"
            android:layout_marginLeft="258dp"
            android:layout_marginStart="258dp" />

        <ImageButton
            android:id="@+id/imageUploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload_image"
            android:background="@null"
            android:onClick="onImageUploadClick"
            android:layout_marginRight="123dp"
            android:layout_marginEnd="123dp"
            android:layout_alignTop="@+id/markerUploadButton"
            android:layout_toLeftOf="@+id/fab"
            android:layout_toStartOf="@+id/fab" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/abc_scrubber_control_off_mtrl_alpha"
            app:backgroundTint="@color/my_orange"
            android:layout_marginRight="63dp"
            android:layout_marginBottom="63dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="63dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pick image for marker"
            android:id="@+id/textView2"
            android:textSize="40dp"
            android:textStyle="italic"
            android:gravity="right"
            android:layout_alignBottom="@+id/markerUploadButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="75dp"
            android:layout_toLeftOf="@+id/markerUploadButton"
            android:layout_toStartOf="@+id/markerUploadButton" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_above="@+id/fab"
            android:layout_alignRight="@+id/imageUploadButton"
            android:layout_alignEnd="@+id/imageUploadButton"
            android:layout_toRightOf="@+id/markerUploadButton"
            android:layout_toEndOf="@+id/markerUploadButton" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
